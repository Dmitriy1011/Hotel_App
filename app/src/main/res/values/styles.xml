<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="ReservationTitles" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#828796</item>
        <item name="android:fontFamily">@font/regular_400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ReservationDescrs" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/regular_400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NavButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/nav_button_tint</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">40dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="cornerRadius">20dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <style name="TextFieldStyle" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="backgroundTint">#f2f8fa</item>
    </style>
</resources>